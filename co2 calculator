    <script>
        function calculateResult() {
            let electricity = parseFloat(document.getElementById("electricity").value) || 0;
            let mileage = parseFloat(document.getElementById("mileage").value) || 0;
            let fuel = parseFloat(document.getElementById("fuel").value) || 0;
            let lpg = parseFloat(document.getElementById("lpg").value) || 0;
            let waste = parseFloat(document.getElementById("waste").value) || 0;

            // Defined Limits
            const limits = {
                electricity: 116.25,
                mileage: 40,
                fuel: 16.1,
                lpg: 6,
                waste: 35
            };

            let message = "âœ… All values are within safe limits!";
            let exceeded = false;

            if (electricity > limits.electricity) {
                message = "âš  High Electricity Usage! Reduce power consumption.";
                exceeded = true;
            }
            if (mileage > limits.mileage) {
                message += "<br>âš  High Car Mileage! Try carpooling.";
                exceeded = true;
            }
            if (fuel < limits.fuel) {
                message += "<br>âš  Low Fuel Efficiency! Maintain vehicle regularly.";
                exceeded = true;
            }
            if (lpg > limits.lpg) {
                message += "<br>âš  High LPG Usage! Reduce unnecessary consumption.";
                exceeded = true;
            }
            if (waste > limits.waste) {
                message += "<br>âš  Excess Waste! Follow the 3Rs (Reduce, Reuse, Recycle).";
                exceeded = true;
            }

            document.getElementById("result").innerHTML = exceeded ? message : "âœ… Everything is within safe limits! Keep up the good work!";
            
            // Update Graph
            updateGraph([electricity, mileage, fuel, lpg, waste], [limits.electricity, limits.mileage, limits.fuel, limits.lpg, limits.waste]);
        }

        function updateGraph(userData, limitData) {
            let ctx = document.getElementById('usageChart').getContext('2d');

            // Destroy previous chart instance if it exists
            if (window.usageChartInstance) {
                window.usageChartInstance.destroy();
            }

            window.usageChartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Electricity (kWh)', 'Mileage (km/day)', 'Fuel Efficiency', 'LPG Cylinders', 'Waste (kg/week)'],
                    datasets: [
                        {
                            label: 'Your Usage',
                            data: userData,
                            backgroundColor: ['red', 'blue', 'purple', 'orange', 'gray']
                        },
                        {
                            label: 'Safe Limit',
                            data: limitData,
                            backgroundColor: 'green'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }
    </script>

